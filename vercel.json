{
    "version":2,
    "builds":[
        {
            "src":"myproject/wsgi.py",
            "use":"@vercel/python",
            "config" :{
                "outputDirectory": "path/to/output/directory",
                "runtime":"python3.10",
                "commands": [
                    {
                      "use": "virtualenv"
                    },
                    {
                      "command": "pip install -r requirements.txt",
                      "use": "virtualenv"
                    },
                    {
                      "command": "python manage.py collectstatic --noinput",
                      "use": "virtualenv"
                    },
                    {
                        "command": "mkdir -p path/to/output/directory",
                        "use": "virtualenv"
                      }
                ]
            }
        },
        {
            "src":"build.sh",
            "use":"@vercel/static-build",
            "config" :{
                "distDir":"dist"
            }
        }
    ],
    "routes":[
        {
            "src":"/static/(.*)"
        },{
            "src":"/(.*)"
        }
    ]
}